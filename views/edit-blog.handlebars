{{!-- This is the edit/delete page that allows the logged in user to either edit a post or delete 
the post. There is also a cancel button that redirects back to the user's dashboard --}}
<dir class="d-grid gap-2 col-6 mx-auto">
    <form name="edit-blog" class="edit-entry-form" id="{{user_id}}" blogID="{{blogDetail.id}}">
        <label for="entry-title" class="fs-5 fw-bold">
           Blog Title:
              </label><br/>
                    <textarea name="entry-title" id="entry-title" cols="100" rows="1" class="fs-5">{{blogDetail.blog_title}}</textarea>
                    <br/>
                  
                  <label for="entry-text"class="fs-5 fw-bold">
                    Blog Text :
                  </label>
                  <br/>
                  <textarea name ="entry-text" id="entry-text"cols="100" rows="5" class="fs-5">{{blogDetail.blog_text}}</textarea>
                  <br/>
                <button type="submit" value="Submit" id="edit-btn" class="btn btn-warning">Update This Blog Post</button>
                <button type="submit" value="Submit" id="delete-btn" class="btn btn-danger" blog_ID="{{blogDetail.id}}">Delete This Blog Post</button>
                <button type="submit" value="Submit" id="cancel-btn" class="btn btn-primary" >Cancel</button>
              </form>
              <form>
                   
                
          </form>
          </dir>      

          <script src="/js/edit-entry.js"> </script>
          <script src="/js/delete-entry.js"> </script>
          <script src="/js/cancel.js"> </script>